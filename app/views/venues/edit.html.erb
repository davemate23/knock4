<h2>Edit <%= @venue.name %></h2>

<%= form_for @venue do |f| %>

  	  <div><%= image_tag @venue.avatar.url(:thumb) %></div>
  	  <div><%= f.label :avatar %><br />
  	  <%= f.file_field :avatar %></div>

      <div class="col-md-6"><%= f.label :name %><br />
      <%= f.text_field :name %></div>

  	  <div class="col-md-6"><%= f.label :identity %><br />
      <%= f.text_field :identity %></div>

      <div class="col-md-6"><%= f.label :address1 %><br />
      <%= f.text_field :address1 %></div>

      <div class="col-md-6"><%= f.label :address2 %><br />
      <%= f.text_field :address2 %></div>

      <div class="col-md-6"><%= f.label :town %><br />
      <%= f.text_field :town %></div>

      <div class="col-md-6"><%= f.label :county %><br />
      <%= f.text_field :county %></div>

      <div class="col-md-6"><%= f.label :postcode %><br />
      <%= f.text_field :postcode %></div>

      <div class="col-md-6"><%= f.label :country %><br />
      <%= f.text_field :country %></div>

      <div class="col-md-6"><%= f.label :website %><br />
      <%= f.text_field :website %></div>

      <div class="col-md-6"><%= f.label :phone %><br />
      <%= f.text_field :phone %></div>

      <div class="col-md-6"><%= f.label :description %><br />
      <%= f.text_area :description %></div>

      <div class="col-md-6"><%= f.label :disabled %><br />
      <%= f.check_box :disabled %></div>

      <div class="col-md-6"><%= f.label :parking %><br />
      <%= f.check_box :parking %></div>

      <div class="col-md-6"><%= f.label :toilets %><br />
      <%= f.check_box :toilets %></div>

      <div class="col-md-6"><%= f.label :food %><br />
      <%= f.check_box :food %></div>

      <div class="col-md-6"><%= f.label :drink %><br />
      <%= f.check_box :drink %></div>

      <div class="col-md-6"><%= f.label :alcohol %><br />
      <%= f.check_box :alcohol %></div>

      <div class="col-md-6"><%= f.label :changing %><br />
      <%= f.check_box :changing %></div>

      <div class="col-md-6"><%= f.label :baby_changing %><br />
      <%= f.check_box :baby_changing %></div>

      <div><%= f.button "Update Venue!", class: "btn btn-default" %></div>

<% end %>