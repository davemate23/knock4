<li>
  <span class="content"><%= hype.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(hype.created_at) %> ago.
  </span>
  	<% if current_knocker == (hype.author) %>
  <span class="delete">
  	<%= link_to "delete", hype, method: :delete,
  								data: { confirm: "Are you sure you want to delete this Hype?" },
  								title: hype.content %>
  <% end %>
  </span>
</li>