<h2><%= conversation.subject %></h2><br />
 
A conversation with
<% conversation.participants.each do |participant| %>
 <% if participant != current_knocker %>
  <%= link_to participant.name, participant %>
 <% end %>
<% end %>
<%= content_tag_for(:li, conversation.receipts_for(current_knocker)) do |receipt| %>
 <% message = receipt.message %>
 <%= message.sender.name %>
 
 <%= simple_format h message.body %>
 
 Sent <%= conversation.updated_at.strftime("%a, %m/%e/%Y %I:%M %p") %>
 
<% end %>
 
<%= render 'messages/form', conversation: conversation %>